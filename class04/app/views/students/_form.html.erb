<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :university_id, 'University ID' %><br>
    <%= f.text_field :university_id %>
  </div>
  <div class="field_list">
    <% fields_for :grade, @student.grades do |gf| %>
        <div class="field">
          <%= gf.label :subject_name %>
          <%= gf.text_field :subject_name %>
        </div> 
        <div class="field">
          <%= gf.label :score %>
          <%= gf.text_field :score %>
        </div> 
        <div class="field">
          <%= gf.label :subject_id %>
          <%= gf.text_field :subject_id %>
        </div> 
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
