<h1> New Product </h1>
<div class="row">
  <div class="col-md-5">
    <%= form_for @product, { role: 'form' } do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, { class: 'form-control'  } %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <%= f.label :order_id %>
        <%= f.select :order_id, options_from_collection_for_select(Order.all, :id, :customer_name),{},{ class: 'form-control' } %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, { class: 'form-control' } %>
      </div>

      <%= f.submit 'Enviar', { class: 'btn btn-success' } %>
    <% end %>
  </div>
</div>
